<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.whiteboard.MainController">
    
    <!-- Top Status Bar -->
    <top>
        <HBox alignment="CENTER" spacing="10" 
              style="-fx-background-color: #343a40; -fx-padding: 10;">
            <Label fx:id="statusLabel" 
                   text="Initializing..."
                   textFill="white"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <!-- Center - Video and Drawing Canvas -->
    <center>
        <StackPane style="-fx-background-color: #000000;">
            <ImageView fx:id="videoView" 
                       fitWidth="800" 
                       fitHeight="600" 
                       preserveRatio="true">
            </ImageView>
            <Canvas fx:id="drawingCanvas" 
                    width="800" 
                    height="600">
            </Canvas>
        </StackPane>
    </center>
    
    <!-- Bottom Control Panel -->
    <bottom>
        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
            
            <!-- Color Selection Section -->
            <HBox alignment="CENTER" spacing="15">
                <Label text="Pen Color:" 
                       style="-fx-font-size: 14px; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                
                <Button fx:id="redButton" 
                        text="Red" 
                        prefWidth="100" 
                        prefHeight="40"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;">
                </Button>
                
                <Button fx:id="greenButton" 
                        text="Green" 
                        prefWidth="100" 
                        prefHeight="40"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;">
                </Button>
                
                <Button fx:id="blueButton" 
                        text="Blue" 
                        prefWidth="100" 
                        prefHeight="40"
                        style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;">
                </Button>
                
                <Button fx:id="yellowButton" 
                        text="Yellow" 
                        prefWidth="100" 
                        prefHeight="40"
                        style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 13px;">
                </Button>
                
                <Separator orientation="VERTICAL" prefHeight="40"/>
                
                <Button fx:id="clearButton" 
                        text="Clear Canvas" 
                        prefWidth="120" 
                        prefHeight="40"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;">
                </Button>
                
                <Button fx:id="exitButton" 
                        text="Exit" 
                        prefWidth="100" 
                        prefHeight="40"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;">
                </Button>
            </HBox>
            
            <!-- Instructions -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Instructions:" 
                       style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                <Label text="1. Select color  |  2. Hold colored object  |  3. Move to draw  |  4. Remove to stop" 
                       style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
            </HBox>
        </VBox>
    </bottom>
    
</BorderPane>